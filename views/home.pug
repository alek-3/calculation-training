html
  head
    title= title
    include includes/style.pug
  body
    h1.title.is-3 Homeページ（仮）
    .content
      h3= message
    form(method='post', action='/game')
      .field
        p.control
          label.label 四則演算 
          span.select(name='calctype')
            select
              option(value='add') たしざん
              option(value='subtract') ひきざん
              option(value='multiple') かけざん
              option(value='divide') わりざん
          label.label 難しさ　
          sapn.select(name='difficulty')
            select
              option(value='easy') かんたん
              option(value='normal') ふつう
          br
          br
          button.button.is-primary.is-outlined(type='submit') ゲームスタート
          input.button.is-primary.is-outlined(type='button', onClick="location.href='/'", value='戻る')
